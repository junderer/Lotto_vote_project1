<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/drwNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx회차"
                android:textSize="30sp" />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="회차 당첨번호"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="30sp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="20xx.0x.xx"
                android:gravity="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/line_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 판매액" />

            <TextView
                android:id="@+id/tosellamntTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="233억" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1등" />

            <TextView
                android:id="@+id/firstWinamntTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="29억" />

            <TextView
                android:id="@+id/firstPrzwnerCoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8명" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <TextView
                    android:id="@+id/drwtNo1textView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/onetoten"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:id="@+id/drwtNo2textView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/onetoten"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:id="@+id/drwtNo3textView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/onetoten"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:id="@+id/drwtNo4textView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/onetoten"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:id="@+id/drwtNo5textView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/onetoten"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:id="@+id/drwtNo6textView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/onetoten"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="4dp"
                app:srcCompat="@drawable/plus" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="4dp">

                <TextView
                    android:id="@+id/bnusNotextView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/onetoten"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pastNumButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회차별 당첨번호 조회" />

    <Button
        android:id="@+id/qrcheckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR 당첨 확인" />
</LinearLayout>